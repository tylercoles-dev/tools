{
  "name": "@mcp-tools/integration-tests",
  "version": "1.0.0",
  "description": "End-to-end integration tests for MCP Tools ecosystem",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:integration": "jest --testPathPattern=integration",
    "test:performance": "jest --testPathPattern=performance",
    "setup": "tsx setup/test-environment.ts",
    "teardown": "tsx setup/test-teardown.ts",
    "start:services": "tsx setup/start-services.ts",
    "stop:services": "tsx setup/stop-services.ts"
  },
  "keywords": ["testing", "integration", "e2e", "mcp-tools"],
  "author": "MCP Tools Team", 
  "license": "MIT",
  "dependencies": {
    "@mcp-tools/core": "file:../core",
    "axios": "^1.7.2",
    "nats": "^2.29.3",
    "ws": "^8.17.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "@types/ws": "^8.5.10",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.4",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "supertest": "^7.0.0",
    "@types/supertest": "^6.0.2",
    "cross-env": "^7.0.3",
    "wait-port": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}