# Test Environment Configuration

NODE_ENV=test
DEBUG=false

# Gateway Test Configuration
GATEWAY_PORT=3001
GATEWAY_HOST=localhost
GATEWAY_BASE_URL=http://localhost:3001

# Database Configuration (test databases)
DATABASE_URL=sqlite:./memory-test.db
KANBAN_DATABASE_URL=sqlite:./kanban-test.db
SCRAPER_DATABASE_URL=sqlite:./scraper-test.db
WIKI_DATABASE_URL=sqlite:./wiki-test.db

# Worker Configuration
EMBEDDING_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
BATCH_SIZE=16
MAX_RETRIES=2

# Test Timeouts
TEST_TIMEOUT=30000
SERVICE_START_TIMEOUT=30000
SERVICE_STOP_TIMEOUT=5000

# Logging
LOG_LEVEL=error