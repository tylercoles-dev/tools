{
  "name": "@mcp-tools/web",
  "version": "1.0.0",
  "description": "Modern React/Next.js web client for MCP Tools",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "preview": "next build && next start",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:smoke": "playwright test tests/smoke",
    "test:e2e": "playwright test tests/e2e",
    "test:regression": "playwright test tests/regression",
    "test:integration": "playwright test tests/integration",
    "test:visual": "playwright test tests/visual",
    "test:accessibility": "playwright test tests/accessibility",
    "test:api": "playwright test tests/api",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:auth": "playwright test --project=authenticated",
    "test:unauth": "playwright test --project=unauthenticated",
    "test:report": "playwright show-report",
    "test:install": "playwright install",
    "test:codegen": "playwright codegen localhost:3000",
    "test:trace": "playwright show-trace",
    "test:ci": "playwright test --reporter=junit,html,json",
    "test:parallel": "playwright test --workers=4",
    "test:serial": "playwright test --workers=1"
  },
  "dependencies": {
    "@headlessui/react": "^2.0.4",
    "@hookform/resolvers": "^3.3.4",
    "@mcp-tools/core": "file:../core",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "@tanstack/react-query": "^5.32.0",
    "axios": "^1.7.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "framer-motion": "^11.2.6",
    "lucide-react": "^0.378.0",
    "next": "^14.2.3",
    "react": "^18.3.1",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.51.3",
    "react-markdown": "^9.1.0",
    "react-syntax-highlighter": "^15.5.0",
    "recharts": "^2.12.7",
    "remark-gfm": "^4.0.1",
    "socket.io-client": "^4.7.5",
    "tailwind-merge": "^2.6.0",
    "zod": "^3.23.8",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^20.19.9",
    "@types/react": "^18.3.3",
    "@types/react-beautiful-dnd": "^13.1.8",
    "@types/react-dom": "^18.3.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.3",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.8.3"
  },
  "keywords": [
    "nextjs",
    "react",
    "typescript",
    "tailwind",
    "mcp-tools",
    "frontend"
  ],
  "author": "MCP Tools Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
