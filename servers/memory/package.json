{
  "name": "memory-graph-mcp-server",
  "version": "1.0.0",
  "description": "A memory graph MCP server for long-term knowledge persistence and relationship mapping",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "memory-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:migrate": "node -e \"import('./dist/database/index.js').then(m => new m.MemoryDatabase({ type: 'sqlite', filename: './memory.db' }).initialize())\""
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "memory",
    "graph",
    "knowledge-persistence",
    "relationships",
    "vector-search",
    "typescript"
  ],
  "author": "MCP Framework",
  "license": "MIT",
  "dependencies": {
    "@mcp-tools/core": "file:../../core",
    "@tylercoles/mcp-server": "0.2.2",
    "@tylercoles/mcp-transport-http": "0.2.2",
    "better-sqlite3": "^9.2.2",
    "kysely": "^0.27.3",
    "pg": "^8.11.3",
    "uuid": "^10.0.0",
    "zod": "^3.25.76",
    "nats": "^2.29.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^10.0.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}