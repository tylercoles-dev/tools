{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noEmit": false,
    "emitDeclarationOnly": false,
    "paths": {
      "@/*": ["./src/*"],
      "@memory/*": ["./src/*"],
      "@mcp-tools/core": ["../../core/src/index.ts"],
      "@mcp-tools/core/*": ["../../core/src/*"],
      "@shared/*": ["../../core/src/shared/*"],
      "@types/*": ["../../core/src/shared/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../../core" }
  ]
}