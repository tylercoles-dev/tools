{
  "name": "wiki-mcp-server",
  "version": "1.0.0",
  "description": "A wiki MCP server with markdown support and full-text search",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "wiki-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "db:migrate": "node -e \"import('./dist/database/index.js').then(m => new m.WikiDatabase({ type: 'sqlite', filename: './wiki.db' }).initialize())\""
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "wiki",
    "markdown",
    "knowledge-base",
    "sql",
    "typescript"
  ],
  "author": "MCP Framework Example",
  "license": "MIT",
  "dependencies": {
    "@mcp-tools/core": "file:../../core",
    "@tylercoles/mcp-server": "0.2.2",
    "@tylercoles/mcp-transport-http": "0.2.2",
    "better-sqlite3": "^9.2.2",
    "kysely": "^0.27.3",
    "marked": "^16.1.1",
    "mysql2": "^3.6.5",
    "pg": "^8.11.3",
    "zod": "^3.25.76",
    "gray-matter": "^4.0.3",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/marked": "^5.0.2",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tylercoles/mcp-framework",
    "directory": "servers/wiki"
  }
}