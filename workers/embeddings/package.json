{
  "name": "mcp-tools-embeddings-worker",
  "version": "1.0.0",
  "description": "TypeScript embeddings worker for generating vector embeddings via NATS",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
