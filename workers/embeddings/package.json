    "zod": "^3.22.4",
    "openai": "^4.52.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
