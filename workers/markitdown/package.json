{
  "name": "mcp-tools-markitdown-worker",
  "version": "1.0.0",
  "description": "MarkItDown worker for converting documents to markdown via NATS",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "markitdown",
    "markdown",
    "nats",
    "worker",
    "document-conversion"
  ],
  "author": "MCP Tools Team",
  "license": "MIT",
  "dependencies": {
    "nats": "^2.29.3",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsup": "^8.2.4",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}