{
  "name": "@mcp-tools/core",
  "version": "1.0.0",
  "description": "Shared core services and utilities for MCP Tools ecosystem",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./kanban": {
      "import": "./dist/services/kanban/index.js",
      "types": "./dist/services/kanban/index.d.ts"
    },
    "./memory": {
      "import": "./dist/services/memory/index.js",
      "types": "./dist/services/memory/index.d.ts"
    },
    "./memory-processing": {
      "import": "./dist/services/memory-processing/index.js",
      "types": "./dist/services/memory-processing/index.d.ts"
    },
    "./wiki": {
      "import": "./dist/services/wiki/index.js",
      "types": "./dist/services/wiki/index.d.ts"
    },
    "./scraper": {
      "import": "./dist/services/scraper/index.js",
      "types": "./dist/services/scraper/index.d.ts"
    },
    "./shared": {
      "import": "./dist/shared/types/index.js",
      "types": "./dist/shared/types/index.d.ts"
    },
    "./quality": {
      "import": "./dist/services/quality/index.js",
      "types": "./dist/services/quality/index.d.ts"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "mcp-tools",
    "core",
    "services",
    "kanban",
    "memory",
    "wiki",
    "scraper",
    "shared-library"
  ],
  "author": "MCP Tools Team",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.3.0",
    "glob": "^10.3.10",
    "gray-matter": "^4.0.3",
    "kysely": "^0.27.3",
    "marked": "^16.1.1",
    "nats": "^2.29.3",
    "pg": "^8.16.3",
    "pg-pool": "^3.10.1",
    "puppeteer": "^21.11.0",
    "slugify": "^1.6.6",
    "uuid": "^10.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "@types/pg": "^8.15.5",
    "@types/puppeteer": "^5.4.7",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.4",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
