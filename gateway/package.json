    "morgan": "^1.10.0",
    "winston": "^3.13.0",
    "dotenv": "^16.4.5",
    "joi": "^17.12.3",
    "axios": "^1.7.2",
    "uuid": "^10.0.0",
    "jsonwebtoken": "^9.0.2",
