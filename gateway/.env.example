# API Gateway Configuration
PORT=8192
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# MCP Server Configuration
KANBAN_SERVER_COMMAND=node
MEMORY_SERVER_COMMAND=node
WIKI_SERVER_COMMAND=node

# External Service URLs
QDRANT_URL=http://localhost:6333
NATS_URL=nats://localhost:4222

# Database Configuration (for MCP servers)
DATABASE_TYPE=sqlite
KANBAN_DATABASE_FILE=./kanban.db
MEMORY_DATABASE_FILE=./memory.db
WIKI_DATABASE_FILE=./wiki.db

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000