{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "paths": {
      "@/*": ["./src/*"],
      "@gateway/*": ["./src/*"],
      "@/types/*": ["./src/types/*"],
      "@/middleware/*": ["./src/middleware/*"],
      "@/routes/*": ["./src/routes/*"],
      "@/services/*": ["./src/services/*"],
      "@/utils/*": ["./src/utils/*"],
      "@mcp-tools/core": ["./core/src/index.ts"],
      "@mcp-tools/core/*": ["./core/src/*"],
      "@shared/*": ["./core/src/shared/*"],
      "@types/*": ["./core/src/shared/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "./core" }
  ]
}