# MCP Tools Environment Configuration

# Node Environment
NODE_ENV=development

# API Configuration
API_BASE_URL=http://localhost:3001
WS_BASE_URL=ws://localhost:3001

# Database Configuration (SQLite for development)
DATABASE_URL=sqlite:./mcp_tools.db

# Production Database (PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/mcp_tools

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# MCP Server Configuration
MCP_SERVER_PORT=3002
MCP_SERVER_HOST=localhost

# Background Workers
EMBEDDINGS_WORKER_ENABLED=true
EMBEDDINGS_PROVIDER=ollama
# EMBEDDINGS_PROVIDER=openai

# OpenAI Configuration (if using OpenAI provider)
# OPENAI_API_KEY=your-openai-api-key

# Ollama Configuration (if using Ollama provider)
OLLAMA_BASE_URL=http://localhost:11434

# Vector Database (Qdrant)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# NATS Message Broker
NATS_URL=nats://localhost:4222

# Redis (optional caching)
REDIS_URL=redis://localhost:6379

# Log Level
LOG_LEVEL=info

# CORS Settings
CORS_ORIGIN=http://localhost:3000

# Security
BCRYPT_ROUNDS=12
