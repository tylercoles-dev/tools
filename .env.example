# MCP Tools Environment Configuration

# Node Environment
NODE_ENV=production

# Database Configuration
POSTGRES_PASSWORD=mcp_secure_password
DATABASE_URL=postgresql://mcp_user:mcp_secure_password@postgres:5432/mcp_tools

# Database Migration & Seeding
DATABASE_TYPE=postgresql
SEED_LEVEL=essential  # none, essential, samples, all
FORCE_SEED=false      # Set to true to re-run existing seeds

# Redis Configuration  
REDIS_PASSWORD=redis_secure_password
REDIS_URL=redis://:redis_secure_password@redis:6379

# Vector Database
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=

# Authentication
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d

# AI Services
OPENAI_API_KEY=your_openai_api_key_here
OLLAMA_BASE_URL=http://host.docker.internal:11434

# MCP Server URLs (Internal Docker Network)
KANBAN_SERVER_URL=http://kanban-server:3002
WIKI_SERVER_URL=http://wiki-server:3003
MEMORY_SERVER_URL=http://memory-server:3004

# External API URLs (for host access)
API_BASE_URL=http://localhost:3000
WS_BASE_URL=ws://localhost:3000

# Gateway Configuration
GATEWAY_PORT=3000

# Background Workers
EMBEDDINGS_WORKER_ENABLED=true
EMBEDDINGS_PROVIDER=ollama
# EMBEDDINGS_PROVIDER=openai

# NATS Message Broker (optional)
NATS_URL=nats://localhost:4222

# Logging
LOG_LEVEL=info

# CORS Settings
CORS_ORIGIN=http://localhost:80,http://localhost:3001

# Security
BCRYPT_ROUNDS=12
