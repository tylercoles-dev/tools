{
  "name": "@mcp-tools/migrations",
  "version": "1.0.0",
  "description": "Database migration service for MCP Tools ecosystem",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsup src/migrate.ts --format esm --dts",
    "start": "node dist/migrate.js",
    "dev": "tsx src/migrate.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "kysely": "^0.27.3",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "typescript": "^5.3.3",
    "tsx": "^4.6.2",
    "tsup": "^8.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}